<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundGray"
        tools:context="com.joeshuff.dddungeongenerator.ResultsActivity">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollMapPage">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectionTitle"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:text="Floor Selection"
                    android:textSize="15sp"
                    android:textColor="@color/colorDarkestFont"
            />

            <com.warkiz.tickseekbar.TickSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/floorSelection"
                    android:layout_below="@id/selectionTitle"
                    android:layout_marginTop="2dp"
                    app:tsb_ticks_count="5"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:tsb_thumb_color="@color/colorAccent"
                    app:tsb_thumb_size="16dp"
                    app:tsb_show_tick_marks_type="oval"
                    app:tsb_tick_marks_color="@color/colorAccent"
                    app:tsb_tick_marks_size="8dp"
                    app:tsb_show_tick_texts="above"
                    app:tsb_tick_texts_color="@color/colorBlack"
                    app:tsb_tick_texts_size="13sp"
                    app:tsb_track_background_color="@color/colorDarkBackgroundGray"
                    app:tsb_track_background_size="2dp"
                    app:tsb_track_progress_color="@color/colorPrimary"
                    app:tsb_track_progress_size="3dp"/>

            <com.otaliastudios.zoom.ZoomLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/zoomLayout"
                    android:layout_below="@+id/floorSelection"
                    android:scrollbars="vertical|horizontal"
                    android:layout_alignParentStart="true"
                    app:transformation="centerInside"
                    app:transformationGravity="auto"
                    app:alignment="center"
                    app:overScrollHorizontal="true"
                    app:overScrollVertical="true"
                    app:overPinchable="true"
                    app:horizontalPanEnabled="true"
                    app:verticalPanEnabled="true"
                    app:zoomEnabled="true"
                    app:flingEnabled="true"
                    app:minZoom="0.7"
                    app:minZoomType="zoom"
                    app:maxZoom="2.5"
                    app:maxZoomType="zoom"
                    app:animationDuration="280"
                    app:hasClickableChildren="true">

                <RelativeLayout
                        android:layout_width="800dp"
                        android:layout_height="800dp"
                        android:background="#ffffff"
                        android:id="@+id/mapLayout">

                </RelativeLayout>

            </com.otaliastudios.zoom.ZoomLayout>

            <!--===== INSTRUCTIONS ====-->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/clickOnARoom"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/colorDarkestFont"
                    android:text="Click on a Room for more information"
            />
            <!--=======================-->

            <!---=== ROOM TITLE ===-->
            <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/room_description_title"
            >

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:id="@+id/roomTitle"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/colorDarkestFont"
                        android:text="Room -"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/roomDesc"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/colorSlightlyDarkerThanLightFont"
                        android:text="Room Detail"
                />

                <com.joeshuff.dddungeongenerator.RecyclerViewEmptySupport
                        android:id="@+id/featureList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:nestedScrollingEnabled="true"
                        android:layout_marginBottom="16dp"
                >

                </com.joeshuff.dddungeongenerator.RecyclerViewEmptySupport>

                <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emptyFeatureView"
                        android:orientation="vertical">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_grid_off_black_48"
                            android:tint="@color/colorDarkBackgroundGray"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:gravity="center"
                            android:text="No Room Features"
                    />
                </LinearLayout>
            </LinearLayout>
            <!--==================-->
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
