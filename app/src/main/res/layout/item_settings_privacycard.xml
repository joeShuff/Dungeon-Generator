<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardBackgroundColor="@color/colorCardBackground"
                                   app:cardElevation="5dp"
                                   android:layout_marginTop="@dimen/small_margin"
                                   app:cardCornerRadius="0dp"
                                   android:layout_marginBottom="16dp"
                                   android:paddingBottom="@dimen/small_margin"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- TITLE -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacy_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Privacy"
                android:textSize="25sp"
                android:textColor="@color/colorFontTitle"
                android:padding="@dimen/small_margin"
                android:textStyle="bold"
        />
        <!-- ===== -->

        <!-- SEPERATOR -->
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/privacy_seperator"
                app:layout_constraintTop_toBottomOf="@id/privacy_title"
                android:background="@color/colorSeparatorColor"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"/>
        <!-- ========= -->

        <!-- TEXT -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacy_text"
                android:text="@string/privacy_text"
                android:textSize="14sp"
                android:textColor="@color/colorFontRegular"
                app:layout_constraintTop_toBottomOf="@id/privacy_seperator"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/small_margin"/>
        <!-- ==== -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>