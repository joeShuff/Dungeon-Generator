<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   app:cardBackgroundColor="@color/colorCardBackground"
                                   app:cardElevation="5dp"
                                   android:layout_marginTop="8dp"
                                   app:cardCornerRadius="0dp"
                                   android:layout_marginBottom="16dp"
                                   android:paddingBottom="8dp"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!-- TITLE -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/openSource_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Open Source"
                android:textSize="25sp"
                android:textColor="@color/colorFontTitle"
                android:padding="8dp"
                android:textStyle="bold"
        />
        <!-- ===== -->

        <!-- SEPERATOR -->
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/openSource_seperator"
                app:layout_constraintTop_toBottomOf="@id/openSource_title"
                android:background="@color/colorBackgroundGray"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"/>
        <!-- ========= -->

        <!-- TEXT -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/openSource_text"
                android:text="@string/open_source_text"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/openSource_seperator"
                android:layout_margin="8dp"/>
        <!-- ==== -->

        <!-- View Document -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/openSource_viewCode"
                app:layout_constraintTop_toBottomOf="@id/openSource_text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal">

            <!-- ICON -->
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/openSource_viewCodeIcon"
                    android:src="@drawable/ic_octicons_mark_github"
                    android:padding="10dp"
                    android:tint="@color/colorDarkestFont"
            />
            <!-- ==== -->

            <!-- TEXT -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/openSource_viewCodeText"
                    android:text="View Code"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:textSize="18sp"
            />
            <!-- ==== -->

        </LinearLayout>
        <!-- ============= -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>