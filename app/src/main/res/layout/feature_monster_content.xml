<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/itemBackgroundColor"
        android:orientation="vertical">

    <!-- TYPE AND BUTTON -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="50dp">

        <TextView
                android:id="@+id/monsterType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Monster Type: "
                android:textColor="@color/colorFontRegular"
                android:gravity="center_vertical"
                android:layout_toStartOf="@id/viewMonsterButton"
        />

        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/viewMonsterButton"
                android:textColor="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:text="View"
                app:cornerRadius="5dp"
        />

    </RelativeLayout>
    <!-- =============== -->

    <!-- COUNT -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monsterCount"
            android:layout_marginStart="16dp"
            android:layout_below="@id/monsterType"
            android:textColor="@color/colorFontRegular"
            android:layout_marginBottom="5dp"
            android:text="Monster Count" />
    <!-- ===== -->

    <!-- BOSS TAG -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/monsterBossText"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorFontRegular"
            android:text="This monster is a boss monster."
            android:layout_marginBottom="5dp"
    />
    <!-- ======== -->
</LinearLayout>
