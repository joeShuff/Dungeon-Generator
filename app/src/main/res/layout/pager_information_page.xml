<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCardBackground"
        tools:context="com.joeshuff.dddungeongenerator.ResultsActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <include layout="@layout/element_info_pair" android:id="@+id/seedView"/>
            <include layout="@layout/element_info_pair" android:id="@+id/environmentView"/>
            <include layout="@layout/element_info_pair" android:id="@+id/creatorView"/>
            <include layout="@layout/element_info_pair" android:id="@+id/purposeView"/>
            <include layout="@layout/element_info_pair" android:id="@+id/historyView"/>
            <include layout="@layout/element_info_pair" android:id="@+id/floorCountView"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
