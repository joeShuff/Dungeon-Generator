<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/itemBackgroundColor"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/tabTitle"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorSeparatorColor"
        />

        <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:id="@+id/triangleIcon"
                android:tint="@color/colorFontRegular"
                android:src="@drawable/round_expand_more_black_48"
                android:scaleType="center"
                android:padding="10dp"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="Room"
                android:gravity="center_vertical|start"
                android:layout_toStartOf="@id/triangleIcon"
                android:textColor="@color/colorFontRegular"
                android:textSize="20sp"
                android:paddingStart="16dp"
                android:id="@+id/barText"
        />

    </RelativeLayout>

    <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/expandableLayout"
            android:orientation="vertical"
            app:ael_duration="400"
            app:ael_expanded="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorSeparatorColor"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
        />

        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFontRegular"
                android:text="Stairs Description" />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:textColor="@color/colorFontRegular"
                android:text="Linked" />

    </com.github.aakira.expandablelayout.ExpandableLinearLayout>

</LinearLayout>
